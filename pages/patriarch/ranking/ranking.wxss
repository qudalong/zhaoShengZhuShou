.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  background: #4ab848;
  padding-bottom: 1rpx;
  position: fixed;
  top: 0;
  left: 0;
  height: 90rpx;
  z-index: 9999;
}
.top-wrap{
  position: relative;
  height: 110rpx;
}
.time-box{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  font-size: 32rpx;
  color: #EC3C00;
  font-weight: bold;
  text-align: center;
  width: 100%;
}
.list{
  position: absolute;
  top: 110rpx;
  left: 0;
  width: 100%;
}
.radius:first-of-type{
  border-radius: 20rpx 20rpx 0 0;
}
.time-box .time{
  font-size: 26rpx;
  color: #FB7F32;
  font-weight: normal;
  margin-top: 8rpx;
}
.top_icon{
  width: 100%;
  height: 120rpx;
}
.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 9.33%;
  margin: 0 12%;
  color: #fff;
}

.on {
  border-bottom: 6rpx solid #fff;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
  margin-top: 90rpx;
}

/*item*/

.ranking-item {
  background: #fff;
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1px solid #f0f0f0;
}

.ranking-item .number {
  width: 100rpx;
  text-align: center;
}

.ranking-item .head {
  margin-right: 20rpx;
}

.ranking-item .head image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.browse-info {
  font-size: 26rpx;
  color: #666;
  margin-top: 15rpx;
}

.top3-icon {
  width: 60rpx;
  height: 60rpx;
}

.kindergarten {
  font-size: 32rpx;
}

.activityExplain {
  position: fixed;
  right: 40rpx;
  bottom: 30%;
  font-size: 30rpx;
  height: 80rpx;
  width: 80rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 50%;
  padding: 10rpx;
  color: #fff;
  background: #4ab848;
}
.ranking-item:first-of-type{
   margin-top: 10rpx;
  border-radius: 20rpx 20rpx 0 0;
}
